    <div class="login-form__titles-head">
        <div class="login-form__sub-head">
            authorization
        </div>
        <div class="login-form__title-head">
            Login
        </div>
    </div>
    <div class="login-form__content">

        <form asp-controller="Account" asp-action="Login" method="post" role="form" class="login-form__content-inner auth_registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-input login-form__input-field">
                <label asp-for="Email">Your Email</label>
                <input type="email" asp-for="Email" placeholder="user@mail.com" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-input login-form__input-field">
                <label asp-for="Password">Your Password</label>
                <input type="password" asp-for="Password" placeholder="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div>
                <div>
                    <input asp-for="RememberMe" type="checkbox">
                    <label for="customCheck">@Html.DisplayNameFor(a => a.RememberMe)</label>
                </div>
            </div>

            <button type="submit" class="login-form__login-btn step1" style="margin-top:16px;">Login</button>
        </form>

