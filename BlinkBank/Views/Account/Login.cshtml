    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".animate").forEach(el => {
                el.style.opacity = "0";
                setTimeout(() => {
